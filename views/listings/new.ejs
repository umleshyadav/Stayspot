<%layout("/layouts/boilerplate") %>
   <div class="row mt-3">
    <div class="col-8 offset-2">
    </br></br>
      <h3>Create a New Listing</h3>
          <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

            <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
           <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required/>
             <div class="valid-feedback">Title looks good!</div>
             <div class="invalid-feedback">please enter a valid title!</div>
            </div>
            
            <div class="mb-3">
             <lable for="description" class="form-label">description</lable>
            <textarea name="listing[description]" placeholder="enter description" class="form-control"  required></textarea>
            <div class="valid-feedback">description looks good!</div>
             <div class="invalid-feedback">please enter some description!</div>
            </div>

            <div class="mb-3">
          <lable for="image" class="form-label">Image Link</lable>
           <input name="listing[image]" type="file" class="form-control"  required/>
            </div>

         <div class="row">
              <div class="mb-3 col-md-4">
             <lable for="price" class="form-label">Price</lable>
                <input name="listing[price]" placeholder="1200"   class="form-control" required/>
            <div class="valid-feedback">price is okay!</div>
             <div class="invalid-feedback">please enter a valid price!</div>
             </div>

            <div class="mb-3 col-md-8">
             <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" placeholder="India" type="text" class="form-control" required/>
            <div class="valid-feedback">country name looks good!</div>
             <div class="invalid-feedback">please enter a valid country name!</div>
            </div>
         </div>
            
            <div class="mb-3">
            <lable for="location" class="form-label">location</lable>
             <input name="listing[location]" placeholder="Uttar Pradesh" type="text" class="form-control" required/>
              <div class="valid-feedback">location name looks good!</div>
             <div class="invalid-feedback">please enter a valid location name!</div>
            </div>
            
         <button class="btn btn-dark add-btn mt-3">Add</button>
          </form>
      </div>
   </div>
    